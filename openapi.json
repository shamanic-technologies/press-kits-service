{
  "openapi": "3.0.0",
  "info": {
    "title": "Press Kits Service",
    "description": "API for generating, versioning, and publicly sharing company press kits",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://press-kits.mcpfactory.org"
    }
  ],
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "service": {
            "type": "string"
          }
        },
        "required": [
          "status",
          "service"
        ]
      },
      "OrganizationResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "orgId": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "shareToken": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "orgId",
          "name",
          "shareToken",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpsertOrganizationRequest": {
        "type": "object",
        "properties": {
          "orgId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "orgId"
        ]
      },
      "ShareTokenResponse": {
        "type": "object",
        "properties": {
          "shareToken": {
            "type": "string",
            "format": "uuid"
          }
        },
        "required": [
          "shareToken"
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        },
        "required": [
          "error"
        ]
      },
      "OrganizationExistsResponse": {
        "type": "object",
        "properties": {
          "organizations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "orgId": {
                  "type": "string"
                },
                "exists": {
                  "type": "boolean"
                }
              },
              "required": [
                "orgId",
                "exists"
              ]
            }
          }
        },
        "required": [
          "organizations"
        ]
      },
      "MediaKitStatus": {
        "type": "string",
        "enum": [
          "drafted",
          "generating",
          "validated",
          "denied",
          "archived"
        ]
      },
      "MediaKitResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "clientOrganizationId": {
            "type": "string",
            "nullable": true,
            "format": "uuid"
          },
          "orgId": {
            "type": "string",
            "nullable": true
          },
          "organizationId": {
            "type": "string",
            "nullable": true,
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "iconUrl": {
            "type": "string",
            "nullable": true
          },
          "mdxPageContent": {
            "type": "string",
            "nullable": true
          },
          "jsxPageContent": {
            "type": "string",
            "nullable": true
          },
          "jsonPageContent": {
            "nullable": true
          },
          "notionPageContent": {
            "type": "string",
            "nullable": true
          },
          "parentMediaKitId": {
            "type": "string",
            "nullable": true,
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/MediaKitStatus"
          },
          "denialReason": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "clientOrganizationId",
          "orgId",
          "organizationId",
          "title",
          "iconUrl",
          "mdxPageContent",
          "jsxPageContent",
          "notionPageContent",
          "parentMediaKitId",
          "status",
          "denialReason",
          "createdAt",
          "updatedAt"
        ]
      },
      "MediaKitListResponse": {
        "type": "object",
        "properties": {
          "mediaKits": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MediaKitResponse"
            }
          }
        },
        "required": [
          "mediaKits"
        ]
      },
      "UpdateMdxRequest": {
        "type": "object",
        "properties": {
          "mediaKitId": {
            "type": "string",
            "format": "uuid"
          },
          "mdxContent": {
            "type": "string"
          }
        },
        "required": [
          "mediaKitId",
          "mdxContent"
        ]
      },
      "UpdateStatusRequest": {
        "type": "object",
        "properties": {
          "mediaKitId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/MediaKitStatus"
          },
          "denialReason": {
            "type": "string"
          }
        },
        "required": [
          "mediaKitId",
          "status"
        ]
      },
      "EditMediaKitRequest": {
        "type": "object",
        "properties": {
          "mediaKitId": {
            "type": "string",
            "format": "uuid"
          },
          "instruction": {
            "type": "string"
          },
          "organizationUrl": {
            "type": "string"
          }
        },
        "required": [
          "mediaKitId",
          "instruction"
        ]
      },
      "ValidateMediaKitRequest": {
        "type": "object",
        "properties": {
          "mediaKitId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "required": [
          "mediaKitId"
        ]
      },
      "CancelDraftRequest": {
        "type": "object",
        "properties": {
          "mediaKitId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "required": [
          "mediaKitId"
        ]
      },
      "PublicMediaKitResponse": {
        "type": "object",
        "properties": {
          "organization": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "nullable": true
              },
              "orgId": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name",
              "orgId"
            ]
          },
          "mediaKit": {
            "allOf": [
              {
                "$ref": "#/components/schemas/MediaKitResponse"
              },
              {
                "nullable": true
              }
            ]
          }
        },
        "required": [
          "organization",
          "mediaKit"
        ]
      },
      "EmailDataResponse": {
        "type": "object",
        "properties": {
          "companyName": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/MediaKitStatus"
              },
              {
                "nullable": true
              }
            ]
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "pressKitUrl": {
            "type": "string",
            "nullable": true
          },
          "content": {
            "type": "string",
            "nullable": true
          },
          "contentType": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "companyName",
          "status",
          "title",
          "pressKitUrl",
          "content",
          "contentType"
        ]
      },
      "AdminOrganization": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "orgId": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "shareToken": {
            "type": "string",
            "format": "uuid"
          },
          "mediaKitCount": {
            "type": "number"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "orgId",
          "name",
          "shareToken",
          "mediaKitCount",
          "createdAt",
          "updatedAt"
        ]
      },
      "AdminOrganizationListResponse": {
        "type": "object",
        "properties": {
          "organizations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AdminOrganization"
            }
          }
        },
        "required": [
          "organizations"
        ]
      },
      "GenerationDataResponse": {
        "type": "object",
        "properties": {
          "currentKit": {
            "allOf": [
              {
                "$ref": "#/components/schemas/MediaKitResponse"
              },
              {
                "nullable": true
              }
            ]
          },
          "instructions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "instruction": {
                  "type": "string"
                },
                "instructionType": {
                  "type": "string"
                },
                "createdAt": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "instruction",
                "instructionType",
                "createdAt"
              ]
            }
          },
          "feedbacks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "denialReason": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "denialReason"
              ]
            }
          }
        },
        "required": [
          "currentKit",
          "instructions",
          "feedbacks"
        ]
      },
      "UpsertGenerationResultRequest": {
        "type": "object",
        "properties": {
          "orgId": {
            "type": "string"
          },
          "mdxContent": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "iconUrl": {
            "type": "string"
          }
        },
        "required": [
          "orgId",
          "mdxContent"
        ]
      },
      "StaleKitOrg": {
        "type": "object",
        "properties": {
          "orgId": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "lastUpdated": {
            "type": "string"
          }
        },
        "required": [
          "orgId",
          "name",
          "lastUpdated"
        ]
      },
      "StaleKitsResponse": {
        "type": "object",
        "properties": {
          "organizations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/StaleKitOrg"
            }
          }
        },
        "required": [
          "organizations"
        ]
      },
      "MediaKitSetup": {
        "type": "object",
        "properties": {
          "orgId": {
            "type": "string"
          },
          "hasKit": {
            "type": "boolean"
          },
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/MediaKitStatus"
              },
              {
                "nullable": true
              }
            ]
          },
          "isSetup": {
            "type": "boolean"
          }
        },
        "required": [
          "orgId",
          "hasKit",
          "status",
          "isSetup"
        ]
      },
      "MediaKitSetupListResponse": {
        "type": "object",
        "properties": {
          "organizations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MediaKitSetup"
            }
          }
        },
        "required": [
          "organizations"
        ]
      },
      "HealthBulkItem": {
        "type": "object",
        "properties": {
          "orgId": {
            "type": "string"
          },
          "hasValidated": {
            "type": "boolean"
          },
          "hasDrafted": {
            "type": "boolean"
          },
          "totalKits": {
            "type": "number"
          }
        },
        "required": [
          "orgId",
          "hasValidated",
          "hasDrafted",
          "totalKits"
        ]
      },
      "HealthBulkResponse": {
        "type": "object",
        "properties": {
          "organizations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HealthBulkItem"
            }
          }
        },
        "required": [
          "organizations"
        ]
      }
    },
    "parameters": {},
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/organizations": {
      "post": {
        "summary": "Upsert organization",
        "tags": [
          "Organizations"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpsertOrganizationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Organization upserted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrganizationResponse"
                }
              }
            }
          }
        }
      }
    },
